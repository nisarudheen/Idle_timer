<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_inheit_view1" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='emails']" position="inside">
                 <div class="col-12 col-lg-6 o_setting_box" id="idle_timer">
                    <div class="o_setting_right_pane">
                       <label for="discount_limit" string="Idle Timer"/>
                       <div class="text-muted mb16">
                           Time Limit For Quiz
                       </div>
                      </div>
                   <div class="o_setting_right_pane">
                       <field name="time" widget="float_time"/>
                   </div>
                 </div>
            </xpath>
        </field>
    </record>
</odoo>